@page "/login"
@layout HeadlessLayout

<PageTitle>Dima - Entrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center pb-8 pt-8">
                <img src="imgs/dima.png" alt="Dima - Controle Financeiro" width="200" />
            </div>
            <MudForm @ref="_mudForm">
                <MudTextField T="string"
                              Label="E-mail"
                              InputType="InputType.Email"
                              Required="true"
                              RequiredError="Informe o E-mail" />

                <MudTextField T="string"
                              Label="Senha"
                              InputType="InputType.Password"
                              Required="true"
                              RequiredError="Informe a senha" />

                <div class="d-flex mt-8">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary">ENTRAR</MudButton>
                    <MudSpacer></MudSpacer>
                    <MudButton Href="/comecar" >REGISTRAR</MudButton>
                </div>
            </MudForm>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    MudForm? _mudForm;
}